<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger"><%= t ".errors" %>
      <%= pluralize @user.errors.full_messages.length, "error" %>.
    </div>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
