<li>
  <%= gravatar_for user, size: Settings.gravatar_user.size %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    <%= link_to user, method: :delete, data: {confirm: t(".confirm")}, class: "destroy-user" do %>
      <span class= "glyphicon glyphicon-trash text-danger"></span>
    <% end %>
  <% end %>
</li>
